#include "main.h"

/**
 * jack_bauer - a function that print in time
 *
 * Return: Always 0 (success)
 *
 */

void jack_bauer(void)
{
	int i, j;

	for (i = 0; i <= 2; i++)
	{
		for (j = 0; j <= 9; j++)
		{
			for (int k = 0; k <= 5; k++)
			{
				for (int l =0; l <= 9; l++)
				{
					if (i < 2)
					{
						_putchar(i + '0');
						_putchar(j + '0');
						_putchar(':');
						_putchar(k + '0');
						_putchar(l + '0');
						_putchar('\n');

					}
					else if (i == 2 && j <= 3)
					{
						_putchar(i + '0');
						_putchar(j + '0');
						_putchar(':');
						_putchar(k + '0');
						_putchar(l + '0');
						_putchar('\n');
					}
				}
			}
		}
	}
}
